
public class RecursiveBases {

	public static String decimal2Binary(int value)
	{
		if(value < 1) return "";
		
		int quotient = value / 2;
		int remainder = value % 2;
		return String.valueOf(remainder);
		decimal2Binary(value%2);
		return value % 2;
	}
	
